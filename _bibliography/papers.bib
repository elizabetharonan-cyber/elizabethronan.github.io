	pmcid = {PMC7755287},
	note = {Place: United States},
	keywords = {Animals, Mutation, Caenorhabditis elegans, Antioxidants/*pharmacology, Caenorhabditis elegans Proteins/genetics/*metabolism, Hydrogen Peroxide/*pharmacology, Membrane Proteins/genetics/*metabolism, Photoreceptor Cells/drug effects/*metabolism, Phototaxis, Suppression, Genetic},
