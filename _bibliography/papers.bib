	note = {Place: United States},
	keywords = {Animals, Genetic Engineering, *Diet, *Models, Animal, Aging/physiology, Bacteria/*genetics, Caenorhabditis elegans/*microbiology/*physiology, Genes, Bacterial, RNA Interference},
	pages = {1123--1133},
}

@article{mahalingam_fresh_2015,
